@model IEnumerable<User>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>id</th><th>public_id</th><th>UserName</th><th>Email</th><th></th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Id</td>
    <td>@user.public_id</td>
    <td>@user.UserName</td>
    <td>@user.Email</td>

    <td>
        <a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Доступ</a>
    </td>
    
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
            <button type="submit" class="btn btn-sm btn-danger">Del</button>
        </form>
    </td>
</tr>
    }
</table>